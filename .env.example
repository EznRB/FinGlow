# ============================================================================
# FinGlow Environment Variables
# ============================================================================
# Copy this file to .env.local and fill in your values

# ============================================================================
# FRONTEND (Vite) - Public variables
# These are exposed to the browser, use only for public keys
# ============================================================================

# Supabase Project URL
VITE_SUPABASE_URL=https://your-project-id.supabase.co

# Supabase Anon Key (public - safe to expose)
VITE_SUPABASE_ANON_KEY=your-supabase-anon-key

# ============================================================================
# BACKEND (Vercel API Routes) - Secret variables
# These are only available server-side, never exposed to browser
# ============================================================================

# Supabase URL (same as VITE_SUPABASE_URL)
SUPABASE_URL=https://your-project-id.supabase.co

# Supabase Anon Key (same as VITE_SUPABASE_ANON_KEY)
SUPABASE_ANON_KEY=your-supabase-anon-key

# Supabase Service Role Key (SECRET - bypasses RLS)
# Find this in: Supabase Dashboard > Settings > API > service_role key
SUPABASE_SERVICE_ROLE_KEY=your-supabase-service-role-key

# ============================================================================
# AI Service
# ============================================================================

# Google Gemini API Key
# Get from: https://aistudio.google.com/app/apikey
GEMINI_API_KEY=your-gemini-api-key

# ============================================================================
# Payment Provider (Stripe)
# ============================================================================

# Stripe Secret Key (SECRET)
# Get from: https://dashboard.stripe.com/apikeys
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key

# Stripe Publishable Key (public - optional for frontend)
VITE_STRIPE_PUBLISHABLE_KEY=pk_test_your-stripe-publishable-key

# Stripe Webhook Secret (SECRET)
# Get from: https://dashboard.stripe.com/webhooks when creating webhook endpoint
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret

# ============================================================================
# Optional Configuration
# ============================================================================

# API Rate Limiting (requests per minute per user)
# RATE_LIMIT_REQUESTS_PER_MINUTE=10

# Enable debug logging
# DEBUG=true